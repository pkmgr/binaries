#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 022420211808-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : corona-virus
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : corona-virus local stats
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Import functions
CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}/functions"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"
SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ -f "$PWD/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE"
else
  echo "Can not load the functions file: $SCRIPTSFUNCTDIR/$SCRIPTSFUNCTFILE" 1>&2
  exit 1
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
systemmgr_install
__options "$@"
__am_i_online_err
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [[ $1 = --force ]]; then
  shift 1
  __rm_rf "$HOME/.cache/corona-virus"
  __curl_download https://corona-stats.online/us "$HOME/.cache/corona-virus"
  if [ ! -f "$HOME/.cache/corona-virus" ]; then
    printf_exit "Download unsuccessfull"
  fi
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#if [ "$(stat -c %y "$HOME/.cache/corona-virus" 2>/dev/null | cut -d' ' -f1)" != "$(date '+%Y-%m-%d %H:%M:%S.%s')" ]; then
if [ "$(__devnull find "$HOME/.cache/corona-virus" -type f -mmin +120 -delete)" ] || [ ! -f "$HOME/.cache/corona-virus" ]; then
  __curl_download https://corona-stats.online/us "$HOME/.cache/corona-virus"
  if [ ! -f "$HOME/.cache/corona-virus" ]; then
    printf_exit "Download unsuccessfull"
  fi
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ ! -z "$1" ]; then
  LOCATION="$1"
else
  LOCATION=USA
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
printf_color "4" "$LOCATION: "
grep "$LOCATION" "$HOME/.cache/corona-virus" | sed "s/\x1b\[[0-9;]*m//g" | sed "s/\s*//g ; s/‚ïë//g ; s/‚îÇ/;/g" | awk -F';' '{print "üò∑" $3 " (" $9") üíÄ" $5 " üè†("$7"%)"}'

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
