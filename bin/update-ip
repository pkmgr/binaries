#!/usr/bin/env bash

APPNAME="update-ip"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"
PATH="/usr/games:$PATH"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# @Author      : Jason
# @Contact     : jason@casjaysdev.com
# @File        : update-ip
# @Created     : Mon, Dec 31, 2019, 00:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : Updates the ip address for motd and issue files
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-applications.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
else
  mkdir -p "/tmp/CasjaysDev/functions"
  curl -LSs "$SCRIPTSFUNCTURL/$SCRIPTSFUNCTFILE" -o "/tmp/CasjaysDev/functions/$SCRIPTSFUNCTFILE" || exit 1
  . "/tmp/CasjaysDev/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

[ "$1" = "--version" ] && get_app_info "$APPNAME"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

HOST=$(hostname -f)
HOSTNAME=$(hostname -f)
HOSTSHORT=$(hostname -s)

NETDEV="$(getlipaddr)"
CURRIP4="$(/sbin/ifconfig $NETDEV | grep -E "venet|inet" | grep -v "127.0.0." | grep 'inet' | grep -v inet6 | awk '{print $2}' | sed 's#addr:##g' | head -n1 | awk '{print $1}')"

if [ -f "/etc/casjaysdev/messages/legal.txt" ]; then
  sed -i "s#MY IP Adress is.*#MY IP Adress is: $CURRIP4#g" /etc/casjaysdev/messages/legal.txt 2>/dev/null
fi

if [ -f "/etc/issue" ]; then
  sed -i "s#MY IP Adress is.*#MY IP Adress is: $CURRIP4#g" /etc/issue 2>/dev/null
fi

if [ -f "/etc/issue.net" ]; then
  sed -i "s#MY IP Adress is.*#MY IP Adress is: $CURRIP4#g" /etc/issue.net 2>/dev/null
fi

if [ -f "/etc/motd" ]; then
  sed -i "s#MY IP Adress is.*#MY IP Adress is: $CURRIP4#g" /etc/motd 2>/dev/null
fi

if [ -f "/etc/motd.net" ]; then
  sed -i "s#MY IP Adress is.*#MY IP Adress is: $CURRIP4#g" /etc/motd.net 2>/dev/null
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

exit $?
