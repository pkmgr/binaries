#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : gitcommit
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : commit changes to current git repo
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# check for needed applications
__check_app git

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# I'm sure there is a better way to do this
if [ -d "$1" ]; then
  MYCURRDIR="$1"
  shift 1
elif [ "$1" = "-d" ] || [ "$1" = "-dir" ] || [ "$1" = "--dir" ]; then
  MYCURRDIR="$2"
  shift 2
  [ -d "$MYCURRDIR" ] || printf_exit "$MYCURRDIR doesn't seem to be a directory"
else
  MYCURRDIR="$PWD"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ "$1" = "-m" ] || [ "$1" = "--m" ] || [ "$1" = "--mess" ] || [ "$1" = "--message" ]; then
  shift 1
  MESSAGE="$1"
  if [ -n "$2" ]; then
    newmess="$*"
  fi
else
  MESSAGE="$1"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
topdir="$(__git_top_dir $MYCURRDIR 2>/dev/null)"
gitdir="${topdir:-$MYCURRDIR}"
versionfile="$topdir/version.txt"
repo="$(__git_remote_fetch $MYCURRDIR)"

[ -n "$repo" ] || repo="localdir"

#printf_debug topdir:$topdir gitdir:$gitdir repo:$repo
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Functions
__git_push() {
  if [ "$repo" != "localdir" ]; then
    if [[ "$*" =~ --automated ]]; then
      printf_green "Pushing the changes to $repo"
      git -C "$gitdir" push -q >/dev/null 2>&1
      __getexitcode "Successfully pushed the changes for commit ID: $(git -C "$gitdir" rev-parse --short HEAD)" "Failed to push the changes"
    else
      printf_read_question "3" "Should I push to $repo? [y/n]" "1" "push"
      if printf_answer_yes "$push"; then
        printf_green "Pushing the changes to $repo"
        git -C "$gitdir" push -q >/dev/null 2>&1
        __getexitcode "Successfully pushed the changes for commit ID: $(git -C "$gitdir" rev-parse --short HEAD)" "Failed to push the changes"
      fi
    fi
  fi
  return $?
}
__version() {
  date +"%m%d%Y%H%M-git" >"$versionfile"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
if [ "$(git -C "$gitdir" rev-parse --is-inside-work-tree 2>/dev/null)" == "" ]; then
  printf_error "You are not in a git repo"
  printf_read_question "4" "Would you like to turn $gitdir into a git repo? y/N" "1" "makerepo"
  if printf_answer_yes "$makerepo"; then
    gitadmin "$gitdir" setup
    exit $?
  else
    exit
  fi
fi

if [ ! -d "$gitdir" ]; then
  printf_exit "$gitdir doesn't seem to be a git repo"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main application
case "$MESSAGE" in
s | status)
  shift 1
  __git_status "$gitdir"
  exit $?
  ;;

l | log)
  shift 1
  __git_log "$gitdir"
  exit $?
  ;;

push)
  shift 1
  __git_push "$@"
  exit $?
  ;;

version)
  shift 1
  # if __git_porcelain "$gitdir"; then
  #   printf_red "There are no changes to commit"
  #   exit
  # fi
  __version
  versionbump="ðŸš€ Version Bump: $(cat "$versionfile") ðŸš€ "
  printf_cyan "$versionbump"
  git -C "$gitdir" add "$gitdir/version.txt" >/dev/null 2>&1
  if ! __git_porcelain "$gitdir"; then
    git -C "$gitdir" commit -q -S -m "$versionbump" "$gitdir/version.txt" 2>/dev/null
  fi
  __getexitcode "Successfully committed the new version to $(__git_repobase "$gitdir")" "Failed to commit the version change"
  exit $?
  ;;

files)
  shift 1
  files="$(git -C "$gitdir" status -b -s | sed '/^\#/d;s,^ ,,g;s,??,A,g' | tr '\n' '|')"
  mess="âž• $files âž• "
  ;;

modified)
  shift 1
  if git -C "$gitdir" status -s -b | grep -F 'M ' >/dev/null 2>&1; then
    files="$(git -C "$gitdir" status -s -b | grep -F 'M ' | awk '{print $2}' | tr '\n' ' ')"
    mess="ðŸ—ƒ $files ðŸ—ƒ "
    git -C "$gitdir" add $files >/dev/null 2>&1
  else
    printf_exit 1 0 "Nothing has been modified"
  fi
  ;;

deleted)
  shift 1
  if git -C "$gitdir" status -s -b | grep -F 'D ' >/dev/null 2>&1; then
    files="$(git -C "$gitdir" status -s -b | grep -F 'D ' | awk '{print $2}' | tr '\n' ' ')"
    mess=":heavy_minus_sign: $files :heavy_minus_sign: "
    git -C "$gitdir" add $files >/dev/null 2>&1
  else
    printf_exit 1 0 "Nothing has been deleted"
  fi
  ;;

added)
  shift 1
  if git -C "$gitdir" status -s -b | grep -F '?? ' >/dev/null 2>&1; then
    files="$(git -C "$gitdir" status -s -b | grep -F '?? ' | awk '{print $2}' | tr '\n' ' ')"
    mess="â“ $files â“"
    git -C "$gitdir" add $files >/dev/null 2>&1
  else
    printf_exit 1 0 "Nothing has been added"
  fi
  ;;

new)
  shift 1
  ARGS="$*"
  mess="ðŸ†•ðŸ“¦ NEW: $ARGS ðŸ“¦ðŸ†• "
  ;;

improve)
  shift 1
  ARGS="$*"
  mess="ðŸ‘Œ IMPROVE: $ARGS ðŸ‘Œ "
  ;;

fixed)
  shift 1
  ARGS="$*"
  mess="ðŸ› FIXED: $ARGS ðŸ› "
  ;;

release)
  shift 1
  ARGS="$*"
  mess="ðŸš€ RELEASE: $ARGS ðŸš€ "
  ;;

docs)
  shift 1
  ARGS="$*"
  mess="ðŸ“– DOCS: $ARGS ðŸ“– "
  ;;

test)
  shift 1
  ARGS="$*"
  mess="ðŸ¤– TEST: $ARGS ðŸ¤– "
  ;;

breaking)
  shift 1
  ARGS="$*"
  mess="âš’ï¸ BREAKING: $ARGS âš’ï¸ "
  ;;

refactor)
  shift 1
  mess="âœ”ï¸ ã€°ï¸ Refactor Code ã€°ï¸ âœ”ï¸  "
  ;;

permission | permissions)
  shift 1
  mess="ðŸ ðŸ”¥â— Fixed Permissions â—ðŸ”¥ðŸ  "
  ;;

bug | bugs)
  shift 1
  mess="ðŸ›ðŸ¦ˆðŸ â— Bug Fixes â—ðŸ ðŸ¦ˆðŸ› "
  ;;

alot | fixes)
  shift 1
  mess="ðŸ¦ˆðŸ ðŸœâ— Fixes and Updates â—ðŸœðŸ¦ˆðŸ  "
  ;;

docker)
  shift 1
  mess="ðŸœâ‡ðŸ¦ˆðŸ â— Added Docker Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

node)
  shift 1
  mess="ðŸœâ‡ðŸ¦ˆðŸ â— Added nodejs Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

ruby)
  shift 1
  mess="ðŸœâ‡ðŸ¦ˆðŸ â— Added ruby Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

php)
  shift 1
  mess="ðŸœâ‡ðŸ¦ˆðŸ â— Added php Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

perl)
  shift 1
  mess="ðŸœâ‡ðŸ¦ˆðŸ â— Added perl Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

python)
  shift 1
  mess="ðŸœâ‡ðŸ¦ˆðŸ â— Added python Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

scratchpad)
  shift 1
  mess="ðŸœðŸ““â‡ðŸ““ ${1:-Modified my scratchpad} ðŸ““â‡ðŸ““ðŸœ "
  ;;

todo)
  shift 1
  mess="ðŸœðŸ““â‡ðŸ““ ${1:-Modified my todo list} ðŸ““â‡ðŸ““ðŸœ "
  ;;

notes)
  shift 1
  mess="ðŸœðŸ““â‡ðŸ““ ${1:-Modified my notes} ðŸ““â‡ðŸ““ðŸœ "
  ;;

blog)
  shift 1
  mess="ðŸœðŸ““â‡ðŸ““ ${1:-New blog post} ðŸ““â‡ðŸ““ðŸœ "
  ;;

init)
  shift 1
  mess="ðŸ¦ˆðŸ ðŸœâ— Initial Commit ðŸ“ðŸœðŸ¦ˆðŸ  "
  ;;

emj | emojy | emojify)
  shift 1
  mess="ðŸ¦ˆðŸ ðŸœâ— ${1:-Well I did some things} â—ðŸœðŸ¦ˆðŸ  "
  ;;

random)
  shift 1
  mess="ðŸœ:arrow_right: Random: $(curl -s https://commitment.herokuapp.com/index.txt) :arrow_left:ðŸœ"
  ;;

custom)
  shift 1
  if [ -n "$1" ]; then
    mess="$1"
  else
    printf_exit "You must specify your commit message"
  fi
  ;;

setup)
  shift 1
  gitadmin "$gitdir" setup "$@"
  exit
  ;;

*)
  if [ -n "$1" ]; then
    [ ! "$(echo "$@" | wc -m)" -lt "4" ] || printf_exit "Message must be longer than 4 characters"
    mess="${newmess:-$@}"
  else
    mess="ðŸ¦ˆðŸ â— Well I did things - Hopefully nothing breaks â—ðŸ ðŸ¦ˆ "
  fi
  ;;
esac
shift

if __git_porcelain "$gitdir"; then
  printf_red "There are no changes to commit"
  exit
else
  printf_cyan "Commiting Changes with the following message:"
  printf_yellow "$mess"
  [ -f "$versionfile" ] && __version
  if [ -f "$gitdir/gitmasterconfig" ] && [ -d "$gitdir/.git" ]; then
    cp -Rf "$(__git_top_dir)/gitmasterconfig" "$(__git_top_dir)/git/config"
  fi
  if [ -z "$files" ]; then git -C "$gitdir" add . >/dev/null 2>&1; fi
  if [ -z "$mess" ]; then
    git -C "$gitdir" commit -q -S -m " ðŸ¦ˆðŸ ðŸœ Fixes and Updates ðŸœðŸ¦ˆðŸ  " 2>/dev/null
  else
    git -C "$gitdir" commit -q -S -m "$mess" 2>/dev/null
  fi
  __getexitcode "Successfully committed the changes to $(__git_repobase "$gitdir")" "Failed to commit the changes"

  if __am_i_online_err "No internet connection. Skipping push"; then
    __git_push "$@"
    printf_green "commit ID: $(git -C "$gitdir" rev-parse --short HEAD)"
  fi
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
