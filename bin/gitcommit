#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : gitcommit
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : commit changes to current git repo
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-testing.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
user_install
__options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# check for needed applications

__check_app git

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# I'm sure there is a better way to do this
if [ -d "$1" ]; then
  gitdir="$1"
  shift 1
elif [ "$1" = "-d" ] || [ "$1" = "-dir" ] || [ "$1" = "--dir" ]; then
  gitdir="$2"
  shift 2
  [ -d "$gitdir" ] || printf_exit "$gitdir doesn't seem to be a directory"
else
  gitdir="$PWD"
fi

####
if [ "$1" = "-m" ] || [ "$1" = "--m" ] || [ "$1" = "--mess" ] || [ "$1" = "--message" ]; then
  shift 1
  MESSAGE="$1"
  if [ -n "$2" ]; then
    newmess="$*"
  fi
else
  MESSAGE="$1"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main application
case "$MESSAGE" in
files)
  shift
  ARGS="$(git -C "$gitdir" status -b -s | sed 's,##..*,,g' | tr ' \n ' ' | ')"
  mess=" âž• Added: $ARGS âž• "
  ;;
added)
  shift 1
  ARGS="$*"
  mess=" ðŸ“¦âž• Added: $ARGS ðŸ“¦âž• "
  ;;

new)
  shift 1
  ARGS="$*"
  mess=" ðŸ†•ðŸ“¦ NEW: $ARGS ðŸ“¦ðŸ†• "
  ;;

improve)
  shift 1
  ARGS="$*"
  mess=" ðŸ‘Œ IMPROVE: $ARGS ðŸ‘Œ "
  ;;

fixed)
  shift 1
  ARGS="$*"
  mess=" ðŸ› FIXED: $ARGS ðŸ› "
  ;;

release)
  shift 1
  ARGS="$*"
  mess=" ðŸš€ RELEASE: $ARGS ðŸš€ "
  ;;

docs)
  shift 1
  ARGS="$*"
  mess=" ðŸ“– DOCS: $ARGS ðŸ“– "
  ;;

test)
  shift 1
  ARGS="$*"
  mess=" ðŸ¤– TEST: $ARGS ðŸ¤– "
  ;;

breaking)
  shift 1
  ARGS="$*"
  mess=" âš’ï¸ BREAKING: $ARGS âš’ï¸ "
  ;;

refactor)
  shift 1
  mess=" âœ”ï¸ ã€°ï¸ Refactor Code ã€°ï¸ âœ”ï¸  "
  ;;

permission | permissions)
  shift 1
  mess=" ðŸ ðŸ”¥â— Fixed Permissions â—ðŸ”¥ðŸ  "
  ;;

bug | bugs)
  shift 1
  mess=" ðŸ›ðŸ¦ˆðŸ â— Bug Fixes â—ðŸ ðŸ¦ˆðŸ› "
  ;;

alot | fixes)
  shift 1
  mess=" ðŸ¦ˆðŸ ðŸœâ— Fixes and Updates â—ðŸœðŸ¦ˆðŸ  "
  ;;

docker)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added Docker Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

node)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added nodejs Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

ruby)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added ruby Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

php)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added php Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

perl)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added perl Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

python)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added python Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

scratchpad)
  shift 1
  mess=" ðŸœðŸ““â‡ðŸ““ Modified my scratchpad ðŸ““â‡ðŸ““ðŸœ "
  ;;

todo)
  shift 1
  mess=" ðŸœðŸ““â‡ðŸ““ Modified my todo list ðŸ““â‡ðŸ““ðŸœ "
  ;;

notes)
  shift 1
  mess=" ðŸœðŸ““â‡ðŸ““ Modified my notes ðŸ““â‡ðŸ““ðŸœ "
  ;;

init)
  shift 1
  mess=" ðŸ¦ˆðŸ ðŸœâ— Initial Commit ðŸ“ðŸœðŸ¦ˆðŸ  "
  ;;

emj | emojy | emojify)
  shift 1
  mess=" ðŸ¦ˆðŸ ðŸœâ— ${1:-Well I did some things} â—ðŸœðŸ¦ˆðŸ  "
  ;;

random)
  shift 1
  mess="ðŸœ:arrow_right: Random: $(curl -s https://commitment.herokuapp.com/index.txt) :arrow_left:ðŸœ"
  ;;

custom)
  shift 1
  if [ -n "$1" ]; then
    mess="$1"
  else
    printf_yellow "You must specify your commit message"
  fi
  ;;

setup)
  shift 1
  gitadmin setup "$@"
  exit
  ;;

*)
  if [ -n "$1" ]; then
    [ ! "$(echo "$@" | wc -m)" -lt "4" ] || printf_exit "Message must be longer than 4 characters"
    mess="${newmess:-$@}"
  else
    shift 1
    mess=" ðŸ¦ˆðŸ â— Well I did things - Hopefully nothing breaks â—ðŸ ðŸ¦ˆ "
  fi
  ;;

esac

gitdir="${gitdir:-$(__git_top_dir)}"
repo="$(__git_fetch_remote $gitdir)"
dirname="$(basename $gitdir 2>/dev/null)"

if [ "$(git -C "$gitdir" rev-parse --is-inside-work-tree 2>/dev/null)" == "" ]; then
  printf_error "You are not in a git repo"
  exit 1
  #printf_read_question "2"
fi

[ ! -z "$repo" ] || repo="localdir"

if [ ! -d "$gitdir" ]; then
  printf_exit "$gitdir doesn't seem to be a git repo"
fi

if __git_porcelain "$gitdir"; then
  printf_red "There are no changes to commit"
else
  printf_info "Commiting Changes with message: $mess"

  date +"%m%d%Y%H%M-git" >"$gitdir/version.txt"
  if [ -f "$gitdir/gitmasterconfig" ] && [ -d "$gitdir/git" ]; then
    cp -Rf "$gitdir/gitmasterconfig" "$gitdir/git/config"
  fi

  git -C "$gitdir" add . >/dev/null 2>&1

  if [ -z "$mess" ]; then
    git -C "$gitdir" commit -q -S -m " ðŸ¦ˆðŸ ðŸœ Fixes and Updates ðŸœðŸ¦ˆðŸ  " 2>/dev/null
  else
    git -C "$gitdir" commit -q -S -m "$mess" 2>/dev/null
  fi
  __getexitcode "Successfully committed the changes to $dirname" "Failed to commit the changes"

  if __am_i_online && [ -z "$push" ]; then
    if [ "$repo" != "localdir" ]; then
      if [[ "$*" =~ --automated ]]; then
        printf_green "Pushing the changes to $repo"
        git -C "$gitdir" push -q
        __getexitcode "Successfully pushed the changes for commit ID: $(git -C "$gitdir" rev-parse --short HEAD)" "Failed to push the changes"
      else
        printf_question "Should I push to $repo? [y/n]"
        read -r -n 1 -s push && echo
        if [[ $push == "y" || $push == "Y" ]]; then
          printf_green "Pushing the changes to $repo"
          git -C "$gitdir" push -q
          __getexitcode "Successfully pushed the changes for commit ID: $(git -C "$gitdir" rev-parse --short HEAD)" "Failed to push the changes"
        fi
      fi
    fi
  else
    printf_green "commit ID: $(git -C "$gitdir" rev-parse --short HEAD)"
    printf_red "No internet connection. Skipping push"
  fi
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
