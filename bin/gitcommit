#!/usr/bin/env bash

APPNAME="$(basename $0)"
USER="${SUDO_USER:-${USER}}"
HOME="${USER_HOME:-${HOME}}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version     : 010920210727-git
# @Author      : Jason
# @Contact     : casjaysdev@casjay.net
# @File        : gitcommit
# @Created     : Wed, Aug 05, 2020, 02:00 EST
# @License     : WTFPL
# @Copyright   : Copyright (c) CasjaysDev
# @Description : commit changes to current git repo
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Set functions

SCRIPTSFUNCTURL="${SCRIPTSAPPFUNCTURL:-https://github.com/dfmgr/installer/raw/master/functions}"
SCRIPTSFUNCTDIR="${SCRIPTSAPPFUNCTDIR:-/usr/local/share/CasjaysDev/scripts}"
SCRIPTSFUNCTFILE="${SCRIPTSAPPFUNCTFILE:-applications.bash}"

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

if [ -f "$PWD/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$PWD/functions/$SCRIPTSFUNCTFILE"
elif [ -f "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE" ]; then
  . "$SCRIPTSFUNCTDIR/functions/$SCRIPTSFUNCTFILE"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# check for needed applications

check_app git

if [ "$(git rev-parse --is-inside-work-tree 2>/dev/null)" == "" ]; then
  printf_exit "You are not in a git repo"
fi

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Main application

if [ "$1" = "-m" ] || [ "$1" = "--m" ] || [ "$1" = "--mess" ] || [ "$1" = "--message" ]; then
  MESSAGE="$1"
  if [ -n "$2" ]; then
    newmess="$2"
  fi
else
  MESSAGE="$1"
fi

case "$MESSAGE" in

added)
  shift 1
  ARGS="$*"
  mess=" ðŸ“¦âž• Added: $ARGS ðŸ“¦âž• "
  ;;

new)
  shift 1
  ARGS="$*"
  mess=" ðŸ†•ðŸ“¦ NEW: $ARGS ðŸ“¦ðŸ†• "
  ;;

improve)
  shift 1
  ARGS="$*"
  mess=" ðŸ‘Œ IMPROVE: $ARGS ðŸ‘Œ "
  ;;

fixed)
  shift 1
  ARGS="$*"
  mess=" ðŸ› FIXED: $ARGS ðŸ› "
  ;;

release)
  shift 1
  ARGS="$*"
  mess=" ðŸš€ RELEASE: $ARGS ðŸš€ "
  ;;

docs)
  shift 1
  ARGS="$*"
  mess=" ðŸ“– DOCS: $ARGS ðŸ“– "
  ;;

test)
  shift 1
  ARGS="$*"
  mess=" ðŸ¤– TEST: $ARGS ðŸ¤– "
  ;;

breaking)
  shift 1
  ARGS="$*"
  mess=" âš’ï¸ BREAKING: $ARGS âš’ï¸ "
  ;;

refactor)
  shift 1
  mess=" âœ”ï¸ ã€°ï¸ Refactor Code ã€°ï¸ âœ”ï¸  "
  ;;

fixes)
  shift 1
  mess=" ðŸ ðŸœâ— Minor Fixes â—ðŸœðŸ  "
  ;;

permission | permissions)
  shift 1
  mess=" ðŸ ðŸ”¥â— Permission Fixes â—ðŸ”¥ðŸ  "
  ;;

bug | bugs)
  shift 1
  mess=" ðŸ›ðŸ¦ˆðŸ â— Bug Fixes â—ðŸ ðŸ¦ˆðŸ› "
  ;;

alot)
  shift 1
  mess=" ðŸ¦ˆðŸ ðŸœâ— Fixes and Updates â—ðŸœðŸ¦ˆðŸ  "
  ;;

docker)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added Docker Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

node)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added nodejs Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

ruby)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added ruby Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

php)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added php Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

perl)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added perl Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

python)
  shift 1
  mess=" ðŸœâ‡ðŸ¦ˆðŸ â— Added python Workflow â—ðŸ ðŸ¦ˆâ‡ðŸœ "
  ;;

init)
  shift 1
  mess=" ðŸ¦ˆðŸ ðŸœâ— Initial CommitðŸ“ ðŸœðŸ¦ˆðŸ  "
  ;;

random)
  shift 1
  mess="ðŸœ Random: $(curl -s https://commitment.herokuapp.com/index.txt) ðŸœ"
  ;;

custom)
  shift 1
  if [ -n "$1" ]; then
    mess="$1"
  else
    printf_yellow "You must specify your commit message"
  fi
  ;;

setup)
  shift 1
  gitadmin setup
  exit
  ;;

*)
  if [ -n "$1" ]; then
    mess="$newmess"
  else
    shift 1
    mess=" ðŸ¦ˆðŸ â— Major Fixes â—ðŸ ðŸ¦ˆ "
  fi
  ;;

esac

oldpwd="$(pwd)"
gitdir="$(echo $(git rev-parse --git-dir 2>/dev/null)/..)"
repo="$(git remote -v | grep fetch | head -n 1 | awk '{print $2}' 2>/dev/null)"

[ ! -z "$repo" ] || repo="localdir"

if [ ! -d "$gitdir" ]; then
  printf_exit "Not a git repo"
  exit 1
else
  cd $gitdir
fi

printf_info "Commiting Changes with message: $mess"

date +"%m%d%Y%H%M-git" >version.txt
if [ -f gitmasterconfig ] && [ -d .git ]; then
  cp -Rf gitmasterconfig .git/config
fi

git add .

if [ -z "$mess" ]; then
  git commit -q -S -m " ðŸ¦ˆðŸ ðŸœ Fixes and Updates ðŸœðŸ¦ˆðŸ  " 2>/dev/null
else
  git commit -q -S -m "$mess" 2>/dev/null
fi
getexitcode "Successfully committed the changes"

if am_i_online && [ -z "$push" ]; then
  if [ "$repo" != "localdir" ]; then
    if [[ "$*" =~ --automated ]]; then
      printf_green "Pushing the changes to $repo"
      git push -q
      getexitcode "Successfully pushed the changes for commit ID: $(git rev-parse --short HEAD)"
    else
      printf_question "Should I push to $repo? [y/n]"
      read -r -n 1 -s push && echo
      if [[ $push == "y" || $push == "Y" ]]; then
        printf_green "Pushing the changes to $repo"
        git push -q
        getexitcode "Successfully pushed the changes for commit ID: $(git rev-parse --short HEAD)"
      fi
    fi
  fi
else
  printf_red "No internet connection. Skipping push"
fi

cd "$oldpwd" || exit 1

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
exit $?
# end
