# @Copyright     : Copyright: (c) 2021 Jason Hempstead, CasjaysDev
# @Created       : Friday, Feb 05, 2021 11:22 EST
# @File          : randomwallpaper
# @Description   : autocomplete for randomwallpaper
# @TODO          :
# @Other         :
# @Resource      :
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
_randomwallpaper() {
  local CASJAYSDEVDIR="${CASJAYSDEVDIR:-/usr/local/share/CasjaysDev/scripts}"
  local cur prev words cword
  local ARRAY="--bg --help --term config enable disable new"
  local BGOPTS="--status --kill --stop --start --new"

  _init_completion || return

  case $prev in
  --bg)
    COMPREPLY=($(compgen -W '$BGOPTS' -- "$cur"))
    return
    ;;

  *)
    COMPREPLY=($(compgen -W '$ARRAY' -- "$cur"))
    return
    ;;
  esac
} &&
  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
  # enable completions
  complete -F _randomwallpaper -o default randomwallpaper
