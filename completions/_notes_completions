#!/usr/bin/env bash
# _notes_completions completion

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# autocomplete for notes

_notes_completions() {
  local cur prev words cword
  local cur="${COMP_WORDS[COMP_CWORD]}"
  local ARRAY="- --help all config client open server"
  local SERVEROPTS="--kill systemd"

  _init_completion || return

  case "$prev" in
  --*)
    return 1
    ;;

  server)
    COMPREPLY=($(compgen -W '${SERVEROPTS}' -- "$cur"))
    return
    ;;

  systemd)
    COMPREPLY=($(compgen -W 'install remove start stop restart status run vars' -- "$cur"))
    return
    ;;

  client)
    _filedir
    return
    ;;

  open)
    _filedir
    return
    ;;

  *)
    COMPREPLY=($(compgen -W '${ARRAY}' -- "$cur"))
    return
    ;;
  esac

} &&

  # - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

  # enable completions
  complete -F _notes_completions -o default notes

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
